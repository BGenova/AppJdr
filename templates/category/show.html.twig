                                <a href="{{ path('showGamebook', {'slug': game.gamebook.slug}) }}"><span class="badge badge-info small m-1
                    float-right">{{ game.gamebook.icon | raw }} {{ game.gamebook.title }}</span></a>
                                <h4>{{ game.title }}</h4>
                            </header>
                            <div class="card-body bg-secondary">
                                <p class="card-text h5">{{ game.shortDescription }}</p>
                                <a href="{{ path('game', {'id': game.id, 'slug': game.slug}) }}" class="btn btn-success text-light
float-right">Acc√©der au salon</a>
                            </div>
                            <footer class="card-footer text-light">
                                <span>Prochaine partie le {{ game.nextGameAt | date }}</span><br>
                                <span>Serveur Vocal: {{ game.vocalServer.icon | raw }} {{ game.vocalServer.name }}</span>
                            </footer>
                        </article>
                    {% endfor %}
                </div>
    {% endfor %}
