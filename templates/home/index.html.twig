{#      LAST GAME #}
{% block bodyTitle %}Derniere partie{% endblock %}
{% block body %}
    <div class="row justify-content-around p-3">
        {% for game in games %}
            <article class="card col-12 col-md-6 bg-secondary shadow-lg p-1 mx-auto border-primary mb-4">
                <header class="card-header bg-primary border border-secondary shadow-lg">
                    <h4> {{ game.title }}</h4>
                </header>
                <div class="card-body bg-secondary">
                    <p class="card-text h5">{{ game.shortDescription }}</p>
                    <hr>
                    <a href="{{ path('game', {'id': game.id, 'slug': game.slug}) }}" class="btn btn-primary text-light
float-right">Accéder au salon</a>
                    <p>Prochaine partie le {{ game.nextGameAt | date }}</p>
                    <p>Serveur Vocal: {{ game.vocalServer.icon | raw }} {{ game.vocalServer.name }}</p>
                </div>
                <footer class="card-footer text-light">
                    <button class="btn btn-primary mr-1 btn-sm small float-right">{{ game.gamebook.category.icon | raw }} {{ game
                        .gamebook.category.title }}</button>
                    <button class="btn btn-primary mr-1 btn-sm small float-right">{{ game.gamebook.icon | raw }} {{ game.gamebook
                        .title }}</button>
                </footer>
            </article>
        {% endfor %}
    </div>
    </div>
{% endblock %}
